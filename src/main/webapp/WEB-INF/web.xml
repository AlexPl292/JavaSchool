    </servlet>

    <servlet-mapping>
        <servlet-name>Show options</servlet-name>
        <url-pattern>/show_options</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Show contracts</servlet-name>
        <jsp-file>/WEB-INF/jsp/show_contracts.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Show contracts</servlet-name>
        <url-pattern>/show_contracts</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>show_customers</welcome-file>
    </welcome-file-list>

