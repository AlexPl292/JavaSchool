    <servlet>
        <servlet-name>Customer</servlet-name>
        <jsp-file>/WEB-INF/jsp/customer.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Show customers</servlet-name>
        <jsp-file>/WEB-INF/jsp/show_customers.jsp</jsp-file>
